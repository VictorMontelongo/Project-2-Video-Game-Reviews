<h1>Welcome to Unblurred</h1>
<div class="form">

  {{!-- <ul class="tab-group">
    <li class="tab active"><a href="#signup">Sign Up</a></li>
    <li class="tab"><a href="#login">Log In</a></li>
  </ul> --}}
  {{#if loggedIn}}
  <h2>Welcome back </h2>
  {{else}}
  {{!-- <a href="/login">login</a> --}}
  
  <div class="tab-content">
    <div id="signup">
      <h1>Sign Up for Free</h1>
        <form id="signup-form">
          <div class="top-row">
            <div class="field-wrap">
              <label for="username-signup">
                Email Address<span class="req">*</span>
              </label>
              <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="field-wrap">
              <label for="password-signup">
                Set A Password<span class="req">*</span>
              </label>
              <input class="form-input" type="password" id="password-signup" />
            </div>
            <button type="submit" class="button button-block" />Get Started</button>
        </form>
    </div>

    <div id="login">
      <h1>Welcome Back!</h1>

      <form id="login-form">

        <div class="field-wrap">
          <label for="email-login">
            Email Address<span class="req">*</span>
          </label>
          <input class="form-input" type="text" id="email-login" />
        </div>

        <div class="field-wrap">
          <label for="password-login">
            Password<span class="req">*</span>
          </label>
          <input class="form-input" type="password" id="password-login" />
        </div>

        <p class="forgot"><a href="#">Forgot Password?</a></p>

        <button class="button button-block" type="submit" />Log In</button>

      </form>

    </div>

  </div><!-- tab-content -->

  {{/if}}
</div> <!-- /form -->